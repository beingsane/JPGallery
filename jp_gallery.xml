<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="plugin" group="content" method="upgrade">
	<name>Joomla Photographers Gallery</name>
	<author>N6REJ</author>
	<authorEmail>bear@joomla.photography</authorEmail>
	<authorUrl>http://joomla.photography</authorUrl>
	<copyright>Copyright (c) 2016 Joomla Photography All rights reserved.</copyright>
	<creationDate>January 10th, 2016</creationDate>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>A.1</version>
	<description>JP_PLG_GALLERY_XML_DESC</description>
	<!-- Parameters -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="galleries_rootfolder" type="text" default="images" label="JP_PLG_GALLERY_ROOTFOLDER" description="JP_PLG_GALLERY_ROOTFOLDER_DESC" />
				<field name="jQueryHandling" type="list" default="1.8.3" label="JP_PLG_GALLERY_JQUERY_HANDLING" description="JP_PLG_GALLERY_JQUERY_HANDLING_DESC">
					<option value="0">JP_PLG_GALLERY_DO_NOT_LOAD_THE_JQUERY_LIBRARY</option>
					<option value="1.5.2">JP_PLG_GALLERY_LOAD_V1_5_X_LATEST_COPY</option>
					<option value="1.6.4">JP_PLG_GALLERY_LOAD_V1_6_X_LATEST_COPY</option>
					<option value="1.7.2">JP_PLG_GALLERY_LOAD_V1_7_X_LATEST_COPY</option>
					<option value="1.8.3">JP_PLG_GALLERY_LOAD_V1_8_X_LATEST_COPY</option>
					<option value="1.9.1">JP_PLG_GALLERY_LOAD_V1_9_X_LATEST_COPY</option>
					<option value="1.10.2">JP_PLG_GALLERY_LOAD_V1_10_X_LATEST_COPY</option>
					<option value="1.11.1">JP_PLG_GALLERY_LOAD_V1_11_X_LATEST_COPY</option>
				</field>
				<field name="thb_width" type="text" default="200" size="3" label="JP_PLG_GALLERY_TW" description="JP_PLG_GALLERY_TW_DESC" />
				<field name="thb_height" type="text" default="160" size="3" label="JP_PLG_GALLERY_TH" description="JP_PLG_GALLERY_TH_DESC" />
				<field name="jpg_quality" type="text" default="80" size="3" label="JP_PLG_GALLERY_TQ" description="JP_PLG_GALLERY_TQ_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="cache_expire_time" type="text" default="1440" size="3" label="JP_PLG_GALLERY_TCEXP" description="JP_PLG_GALLERY_TCEXP_DESC" />
				<field name="memoryLimit" type="text" default="" size="3" label="JP_PLG_GALLERY_ML" description="JP_PLG_GALLERY_ML_DESC" />
			</fieldset>
		</fields>
	</config>
	<!-- Files -->
	<files folder="plugin" destination="jp_gallery">
		<filename plugin="jp_gallery">jp_gallery.php</filename>
		<filename plugin="jp_gallery">jp_gallery.xml</filename>
		<folder>jp_gallery</folder>
	</files>
	<media folder="plugin/media" destination="jp_gallery">
		<filename>SIG_300x94.png</filename>
	</media>
	<languages folder="plugin">
		<language tag="en-GB">language/en-GB/en-GB.plg_content_jp_gallery.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_jp_gallery.sys.ini</language>
	</languages>
	<updateservers>
		<server type="extension" priority="1" name="Simple Image Gallery">http://www.joomlaworks.net/updates/jp_gallery.xml</server>
	</updateservers>
</extension>
